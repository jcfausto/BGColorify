{
    "name": "BGColorify",
    "version": "1.0",
    "description": "Change web pages background color with 1 click",
    "manifest_version": 2,
    "permissions": ["activeTab", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}